<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.skyeye.dao.ProProjectDiscussTypeDao">

    <insert id="insertProProjectDiscussType" parameterType="java.util.Map">
        insert into pro_project_discuss_type
        (id, `name`, state, create_id, create_time)
        values(#{id}, #{typeName},  #{state},  #{createId},  #{createTime})
    </insert>

    <delete id="deleteProProjectDiscussTypeById" parameterType="java.util.Map">
        UPDATE pro_project_discuss_type
        <set>
            state = 4
        </set>
        WHERE id = #{id}
    </delete>

    <update id="editStateUpById" parameterType="java.util.Map">
        UPDATE pro_project_discuss_type
        <set>
            state = 2
        </set>
        WHERE id = #{id}
    </update>

    <update id="editStateDownById" parameterType="java.util.Map">
        UPDATE pro_project_discuss_type
        <set>
            state = 3
        </set>
        WHERE id = #{id}
    </update>

    <update id="editProProjectDiscussTypeById" parameterType="java.util.Map">
        UPDATE pro_project_discuss_type
        <set>
            <if test="typeName != '' and typeName != null">
                `name` = #{typeName}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="queryProProjectDiscussTypeList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            c.id,
            c.`name` typeName,
            c.state,
            CONVERT(c.create_time, char) createTime,
            (select count(*) from pro_project_discuss a where a.type_id = c.id) useNum
        FROM
            pro_project_discuss_type c
        WHERE c.state != 4
            <if test="typeName != '' and typeName != null">
                AND c.`name` LIKE '%${typeName}%'
            </if>
            <if test="state != '' and state != null">
                AND c.state = #{state}
            </if>
    </select>

    <select id="queryProProjectDiscussTypeMationById" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id,
            `name` typeName
        FROM
            pro_project_discuss_type
        WHERE
            id = #{id}
    </select>

    <select id="queryStateById" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            state
        FROM
            pro_project_discuss_type
        WHERE
            id = #{id}
    </select>

    <select id="queryStateUpList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id,
            `name`
        FROM
            pro_project_discuss_type
        WHERE
            state = 2
    </select>

    <select id="queryProProjectDiscussTypeByName" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id
        FROM
            pro_project_discuss_type
        WHERE state != 4
            AND `name` = #{typeName}
    </select>

    <select id="queryProProjectDiscussTypeByIdAndName" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id
        FROM
            pro_project_discuss_type
        WHERE state != 4
            AND `name` = #{typeName} AND id != #{id}
    </select>

</mapper>