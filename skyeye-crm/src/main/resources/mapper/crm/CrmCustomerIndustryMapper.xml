<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.skyeye.dao.CrmCustomerIndustryDao">

    <insert id="insertCrmCustomerIndustry" parameterType="java.util.Map">
        insert into crm_customer_industry
        (id, `name`, state, create_id, create_time)
        values(#{id}, #{typeName},  #{state},  #{createId},  #{createTime})
    </insert>

    <delete id="deleteCrmCustomerIndustryById" parameterType="java.util.Map">
        UPDATE crm_customer_industry
        <set>
            state = 4
        </set>
        WHERE id = #{id}
    </delete>

    <update id="editStateUpById" parameterType="java.util.Map">
        UPDATE crm_customer_industry
        <set>
            state = 2
        </set>
        WHERE id = #{id}
    </update>

    <update id="editStateDownById" parameterType="java.util.Map">
        UPDATE crm_customer_industry
        <set>
            state = 3
        </set>
        WHERE id = #{id}
    </update>

    <update id="editCrmCustomerIndustryById" parameterType="java.util.Map">
        UPDATE crm_customer_industry
        <set>
            <if test="typeName != '' and typeName != null">
                `name` = #{typeName}
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <select id="queryCrmCustomerIndustryList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            c.id,
            c.`name` typeName,
            c.state,
            CONVERT(c.create_time, char) createTime,
            (select count(*) from crm_customer a where a.type_id = c.id) useNum
        FROM
            crm_customer_industry c
        WHERE c.state != 4
            <if test="typeName != '' and typeName != null">
                AND c.`name` LIKE '%${typeName}%'
            </if>
            <if test="state != '' and state != null">
                AND c.state = #{state}
            </if>
    </select>

    <select id="queryCrmCustomerIndustryMationById" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id,
            `name` typeName
        FROM
            crm_customer_industry
        WHERE
            id = #{id}
    </select>

    <select id="queryStateById" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            state
        FROM
            crm_customer_industry
        WHERE
            id = #{id}
    </select>

    <select id="queryStateUpList" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id,
            `name`
        FROM
            crm_customer_industry
        WHERE
            state = 2
    </select>

    <select id="queryCrmCustomerIndustryByName" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id
        FROM
            crm_customer_industry
        WHERE state != 4
            AND `name` = #{typeName}
    </select>

    <select id="queryCrmCustomerIndustryByIdAndName" parameterType="java.util.Map" resultType="java.util.Map">
        SELECT
            id
        FROM
            crm_customer_industry
        WHERE state != 4
            AND `name` = #{typeName} AND id != #{id}
    </select>

</mapper>